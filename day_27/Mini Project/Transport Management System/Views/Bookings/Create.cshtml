@model Transport_Management_System.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TripID" class="control-label"></label>
                <select asp-for="TripID" class ="form-control" asp-items="ViewBag.TripID"></select>
            </div>
            <div class="form-group">
                <label asp-for="PassengerID" class="control-label"></label>
                <select asp-for="PassengerID" class ="form-control" asp-items="ViewBag.PassengerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Status (e.g., Confirmed, Cancelled, Completed)</label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
